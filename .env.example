# =============================================================================
# API Configuration
# =============================================================================
API_HOST=localhost
API_PORT=8000
API_WORKERS=1
ENVIRONMENT=development

# =============================================================================
# CORS Configuration
# =============================================================================
# Comma-separated list of allowed origins
CORS_ORIGINS=http://localhost:5173,http://localhost:3000
CORS_ALLOW_CREDENTIALS=true
CORS_ALLOW_METHODS=GET,POST
CORS_ALLOW_HEADERS=*

# =============================================================================
# File Upload Configuration
# =============================================================================
# Maximum file size in bytes (default: 52428800 = 50 MB)
MAX_FILE_SIZE=52428800
# Allowed file extensions (comma-separated)
ALLOWED_EXTENSIONS=.txt
# Temporary directory for uploaded files
UPLOAD_TEMP_DIR=/tmp/wincap

# =============================================================================
# Session Configuration
# =============================================================================
# Session time-to-live in hours
SESSION_TTL_HOURS=24
# Cleanup interval for expired sessions in hours
CLEANUP_INTERVAL_HOURS=6

# =============================================================================
# Processing Configuration
# =============================================================================
# Default VAT rate for DSO/DPO calculations
VAT_RATE_DEFAULT=1.20
# Maximum number of files to process in parallel
MAX_PARALLEL_FILES=4

# =============================================================================
# Logging Configuration
# =============================================================================
# Log level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO
# Optional log file path (leave empty to log only to console)
# LOG_FILE=wincap.log

# =============================================================================
# Frontend Configuration
# =============================================================================
VITE_API_URL=http://localhost:8000

# =============================================================================
# Database (for future use)
# =============================================================================
# DATABASE_URL=postgresql://user:password@localhost:5432/wincap
# REDIS_URL=redis://localhost:6379

