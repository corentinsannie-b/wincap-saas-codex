# =============================================================================
# API Configuration
# =============================================================================
API_HOST=localhost
API_PORT=8000
API_WORKERS=1
# API key for authentication (required for all requests)
# Use a secure random string in production (e.g., openssl rand -base64 32)
API_KEY=development-api-key-change-in-production
ENVIRONMENT=development

# =============================================================================
# CORS Configuration
# =============================================================================
# Comma-separated list of allowed origins
CORS_ORIGINS=http://localhost:5173,http://localhost:3000,http://localhost:8080
CORS_ALLOW_CREDENTIALS=true
CORS_ALLOW_METHODS=GET,POST,DELETE
CORS_ALLOW_HEADERS=*

# =============================================================================
# File Upload Configuration
# =============================================================================
# Maximum file size in bytes (default: 52428800 = 50 MB)
MAX_FILE_SIZE=52428800
# Allowed file extensions (comma-separated)
ALLOWED_EXTENSIONS=.txt
# Temporary directory for uploaded files
UPLOAD_TEMP_DIR=/tmp/wincap

# =============================================================================
# Session Configuration
# =============================================================================
# Session time-to-live in hours (recommend 6 hours for security)
SESSION_TTL_HOURS=6
# Cleanup interval for expired sessions in hours (recommend 1 hour for resource management)
CLEANUP_INTERVAL_HOURS=1

# =============================================================================
# Processing Configuration
# =============================================================================
# Default VAT rate for DSO/DPO calculations
VAT_RATE_DEFAULT=1.20
# Maximum number of files to process in parallel
MAX_PARALLEL_FILES=4

# =============================================================================
# Logging Configuration
# =============================================================================
# Log level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO
# Optional log file path (leave empty to log only to console)
# LOG_FILE=wincap.log

# =============================================================================
# Frontend Configuration
# =============================================================================
VITE_API_URL=http://localhost:8000
# API key for frontend authentication (must match API_KEY on backend)
VITE_API_KEY=development-api-key-change-in-production

# =============================================================================
# Database (for future use)
# =============================================================================
# DATABASE_URL=postgresql://user:password@localhost:5432/wincap
# REDIS_URL=redis://localhost:6379

# =============================================================================
# AI Integration
# =============================================================================
# Claude API key for agent chat functionality
ANTHROPIC_API_KEY=sk-ant-...

