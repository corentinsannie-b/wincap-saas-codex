{
  "name": "wincap-saas",
  "version": "1.0.0",
  "private": true,
  "description": "Wincap Financial Due Diligence SaaS Platform",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:api\" \"npm run dev:web\"",
    "dev:api": "cd apps/api && python3 -m uvicorn api:app --reload --port 8000",
    "dev:web": "cd apps/web && npm run dev",
    "build": "npm run build:web",
    "build:web": "cd apps/web && npm run build",
    "test": "npm run test:api && npm run test:web",
    "test:api": "cd apps/api && pytest",
    "test:web": "cd apps/web && npm test",
    "lint": "npm run lint:web",
    "lint:web": "cd apps/web && npm run lint",
    "generate:types": "openapi-generator-cli generate -c openapi.config.json"
  },
  "devDependencies": {
    "@openapitools/openapi-generator-cli": "^2.27.0",
    "concurrently": "^8.2.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
